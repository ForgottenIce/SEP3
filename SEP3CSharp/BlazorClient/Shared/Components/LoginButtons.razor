@using HttpClients.ClientInterfaces
@using Radzen
@namespace Login
@inject NavigationManager navMgr
@inject IAuthService authService

<AuthorizeView>
    <Authorized>
        <RadzenButton Icon="logout" Variant="Variant.Text" ButtonStyle="ButtonStyle.Light" Click="Logout"></RadzenButton>
    </Authorized>
    <NotAuthorized>
        <RadzenButton Icon="login" Variant="Variant.Text" ButtonStyle="ButtonStyle.Light" Click="Login"></RadzenButton>
    </NotAuthorized>
</AuthorizeView>

@code {
    private void Login()
    {
        navMgr.NavigateTo("/Login");
    }

    private async Task Logout()
    {
        await authService.LogoutAsync();
        navMgr.NavigateTo("/");
    }
}