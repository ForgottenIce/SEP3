@page "/ReturnOfOrder"
@using Radzen
@using global::Shared.Models


<div class="container p-4">
    <div class="row">
        <div class="col-3">
            <h6 class="text-uppercase">Returvare</h6>
        </div>
    </div>
</div>


<RadzenDataGrid TItem="Order" Data="@data">
    <Columns>
        <RadzenDataGridColumn TItem="Order" Property="OrderID" Title="Vare Nummer"/>
        <RadzenDataGridColumn TItem="Order" Property="OrderdItems" Title="Bestiltevare"/>
        <RadzenDataGridColumn TItem="Order" Property="ReturnedItems" Title="Returnerede vare"/>
        <RadzenDataGridColumn TItem="Order" Property="Condition" Title="Stand"/>
        <RadzenDataGridColumn TItem="Order" Property="ItmePosition" Title="Vare position"/>


        <FooterTemplate>
            Total amount: <b>@String.Format(new System.Globalization.CultureInfo("en-US"), "{0:C}")</b>
        </FooterTemplate>
    </Columns>
</RadzenDataGrid>

<!-- Grid container -->
<div class="container p-4">
    <!--Grid row-->
    <div class="row">
        <!--Grid column-->
        <div class="col-3">
            <h6 class="text-uppercase">bestilte vare</h6>
            <RadzenDataGridColumn Width="50px" TItem="Order" Title="#" Filterable="false" Sortable="false" TextAlign="TextAlign.Center">
                <Template>
                    @(orders.IndexOf(context) + 1)
                </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn Width="200px" TItem="Order" Property="OrderID" Title="Order ID">
                <FooterTemplate>
                    Displayed orders: <b>@ordersGrid.View.Count()</b> of <b>@orders.Count()</b>
                </FooterTemplate>
            </RadzenDataGridColumn>

        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-3">

            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Returnable products</RadzenText>
            <RadzenTextBox Disabled="true" Class="w-100"/>

        </div>

        <div class="col-3">
            <div class="row mb-4">
                <div class="col">
                    <RadzenText TextStyle="TextStyle.H6" TagName="TagName.H3">Busy Indicator</RadzenText>

                    <RadzenButton style="width: 160px" Icon="save" BusyText="Saving ..." IsBusy=@busy Click=@OnBusyClick Text="Save"/>
                </div>
            </div>
        </div>
        <style>
                           .button-demo .rz-button {
                               margin: 0 0.5rem 1rem 0;
                           }
                           .button-demo h3 {
                               margin-bottom: 1rem;
                           }
                       </style>
    </div>


    <!--Grid column-->
</div>
<!--Grid row-->


@code {
    

    // btn logic 

    bool busy;


    void OnClick(string buttonName)
    {
    }

    async Task OnBusyClick()
    {
        busy = true;
        await Task.Delay(2000);
        busy = false;
    }
    // total counter



    string emptyText = "No Items to display!";


    List<Order> data = new List<Order>();

    RadzenDataGrid<Order> ordersGrid;
    IList<Order> orders;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        orders.Count();
    }

    public class Order
    {
        public string OrderID;
        public string OrderdItems;
        public string ReturnedItems;
        public string Condition;
        public string ItmePosition;

        public Order(string orderId, string orderdItems, string returnedItems, string condition, string itmePosition)
        {
            OrderID = orderId;
            OrderdItems = orderdItems;
            ReturnedItems = returnedItems;
            Condition = condition;
            ItmePosition = itmePosition;
        }

        List<Order> orders;

        public List<Order> Orders
        {
            get => orders;
            set => orders = value ?? throw new ArgumentNullException(nameof(value));
        }
    }

}