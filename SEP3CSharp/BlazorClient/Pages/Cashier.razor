@page "/Cashier"
@inject NavigationManager navMgr
<AuthorizeView>
    <NotAuthorized>
        <div class="container p-4">
            <div class="row">
                <div class="col-3">
                    <h6 class="text-uppercase">Cashier</h6>
                </div>
            </div>
        </div>
    <div class="d-flex justify-content-center mt-5">
    
            <button type="button" class="btn btn-primary button mx-3" onclick="@GoToViewOrder">Se bestilling</button>
            <button type="button" class="btn btn-primary button mx-3" onclick="@GoToCreateOrder">Opret bestilling</button>
            <button type="button" class="btn btn-primary button mx-3" onclick="@GoToCreateCustomer">Opret kunde</button>

        </div>

    </NotAuthorized>
</AuthorizeView>

@code {

    async Task GoToViewOrder()
    {
        navMgr.NavigateTo("/vieworder");
    }

    async Task GoToCreateOrder()
    {
        navMgr.NavigateTo("/CreateOrder");
    }

    async Task GoToCreateCustomer()
    {
        navMgr.NavigateTo("/CreateCustomer");
    }

}