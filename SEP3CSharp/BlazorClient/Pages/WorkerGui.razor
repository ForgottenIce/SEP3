            <div class="d-flex justify-content-center mt-5">
                <button type="button" class="btn btn-primary button mx-3" @onclick=SePakBestilling>Se/Pak bestilling</button>
                <button type="button" class="btn btn-primary button mx-3" @onclick=VareRetur>Vare retur</button>

            </div>
        </div>
