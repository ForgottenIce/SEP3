                    <div>
                        <div class="row px-3">
                            <RadzenText TextStyle="TextStyle.H6" Class="d-flex mt-1 mb-0">FullName: </RadzenText>
                            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Default TextBox</RadzenText>
                            <RadzenTextBox @oninput=@(args => OnChange(args.Value.ToString(), "TextBox with change on every input")) Class="w-100" @bind-value="fullName" />
                            <RadzenText TextStyle="TextStyle.Body1"></RadzenText>
                        </div>
                        <div class="row px-3">
                            <RadzenText TextStyle="TextStyle.H6" Class="d-flex mt-3 mb-0">Phone: </RadzenText>
                            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">5 characters maximum</RadzenText>
                            <RadzenTextBox @oninput=@(args => OnChange(args.Value.ToString(), "TextBox with change on every input")) Class="w-100" @bind-value="phoneNo" />
                            
                            
                            <RadzenText TextStyle="TextStyle.Body1"></RadzenText>
                        </div>
                        <div class="row px-3">
                            <RadzenText TextStyle="TextStyle.H6" Class="d-flex mt-3 mb-0">Address: </RadzenText>
                            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Default TextBox</RadzenText>
                            <RadzenTextBox @oninput=@(args => OnChange(args.Value.ToString(), "TextBox with change on every input")) Class="w-100" @bind-value="address" />
                            <RadzenText TextStyle="TextStyle.Body1"></RadzenText>
                        </div>
                        <div class="row px-3">
                            <RadzenText TextStyle="TextStyle.H6" Class="d-flex mt-3 mb-0">Mail: </RadzenText>
                            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Default TextBox</RadzenText>
                            <RadzenTextBox @oninput=@(args => OnChange(args.Value.ToString(), "TextBox with change on every input")) Class="w-100" @bind-Value="mail" />
                            <RadzenText TextStyle="TextStyle.Body1"></RadzenText>
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col">
                        <RadzenButton style="width: 160px" Icon="save" BusyText="Saving ..." IsBusy=@addCustomerIsbusy Click=@CreateCustomer Text="Create"/>
                    </div>
                </div>
                
                
                <style>
                    .button-demo .rz-button {
                        margin: 0 0.5rem 1rem 0;
                    }
                    .button-demo h3 {
                        margin-bottom: 1rem;
                    }
                </style>
            </RadzenCard>
        </div>
    </div>
</div>



