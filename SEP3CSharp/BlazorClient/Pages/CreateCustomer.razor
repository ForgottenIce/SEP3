@page "/CreateCustomer"
<h3>CreateCustomer</h3>

<div class="container-fluid">
    <div class="row my-5">
        <div class="col-lg-6 col-xl-4 offset-lg-3 offset-xl-4">
    

            <RadzenCard Class="my-3 rz-background-color-primary-lighter rz-shadow-0 rz-border-radius-0" style="margin: 0 calc(-1 * var(--rz-card-padding)); padding: 2rem;">
                                    
                <div class="d-flex flex-row p-3">
                    <div>
                        <div class="row px-3">
                            <RadzenText TextStyle="TextStyle.H6" Class="d-flex mt-1 mb-0">FullName: </RadzenText>
                            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Default TextBox</RadzenText>
                            <RadzenTextBox @oninput=@(args => OnChange(args.Value.ToString(), "TextBox with change on every input")) Class="w-100" />
                            <RadzenText TextStyle="TextStyle.Body1"></RadzenText>
                        </div>
                        <div class="row px-3">
                            <RadzenText TextStyle="TextStyle.H6" Class="d-flex mt-3 mb-0">Phone: </RadzenText>
                            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">5 characters maximum</RadzenText>
                            <RadzenTextBox @oninput=@(args => OnChange(args.Value.ToString(), "TextBox with change on every input")) Class="w-100" />
                            <RadzenText TextStyle="TextStyle.Body1"></RadzenText>
                        </div>
                        <div>
                            <RadzenText TextStyle="TextStyle.H6" Class="d-flex mt-3 mb-0">Adress: </RadzenText>
                            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Default TextBox</RadzenText>
                            <RadzenTextBox @oninput=@(args => OnChange(args.Value.ToString(), "TextBox with change on every input")) Class="w-100" />
                            <RadzenText TextStyle="TextStyle.Body1"></RadzenText>
                        </div>
                        <div>
                            <RadzenText TextStyle="TextStyle.H6" Class="d-flex mt-3 mb-0">Mail: </RadzenText>
                            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Default TextBox</RadzenText>
                            <RadzenTextBox @oninput=@(args => OnChange(args.Value.ToString(), "TextBox with change on every input")) Class="w-100" />
                            <RadzenText TextStyle="TextStyle.Body1"></RadzenText>
                        </div>
                    </div>
                </div>
               <div class="row mb-4">
                   <div class="col">
                       <RadzenButton style="width: 160px" Icon="save" BusyText="Saving ..." IsBusy=@busy Click=@OnBusyClick Text="Create"/>
                   </div>
               </div>
                
                <style>
                    .button-demo .rz-button {
                        margin: 0 0.5rem 1rem 0;
                    }
                    .button-demo h3 {
                        margin-bottom: 1rem;
                    }
                </style>
            </RadzenCard>
        </div>
    </div>
</div>



