@page "/AdminGui"


@inject NavigationManager navMgr
<AuthorizeView>

    <NotAuthorized>
       <div class="container p-4">
           <div class="row">
               <div class="col-3">
                   <h6 class="text-uppercase">Admin</h6>
               </div>
           </div>
       </div>
            <div class="d-flex justify-content-center mt-5">
                <button type="button" class="btn btn-primary button mx-3" onclick="@GoToAddProduct">Se/Ændre lager status</button>
                <button type="button" class="btn btn-primary button mx-3" onclick="@GoToOverridePosition" > Tilføj vare eller overskriv posotion</button>

            </div>
    </NotAuthorized>
    @code {
    
    }</AuthorizeView>
 
@code {

    async Task GoToOverridePosition()
    {
        navMgr.NavigateTo("/AddProduct");
    }

    async Task GoToAddProduct()
    {
        navMgr.NavigateTo("/AddProductToWarehouse");
    }
}